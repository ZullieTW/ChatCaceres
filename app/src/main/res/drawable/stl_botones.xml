<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/rosa_botones_ligero"
                android:startColor="@color/morado_botones_ligero"
                android:type="linear" />

            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/rosa_botones"
                android:startColor="@color/morado_botones"
                android:type="linear" />

            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>